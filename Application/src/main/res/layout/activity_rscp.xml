<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.android.bluetoothlegatt.RSCPActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect State:"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/connected_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSC Measurement Data"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/enable_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="on/off"
                    android:textSize="10sp"
                    android:visibility="visible"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="motion:"/>

                <TextView
                    android:id="@+id/motion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="speed:"/>

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cadence:"/>

                <TextView
                    android:id="@+id/cadence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stride_length:"/>

                <TextView
                    android:id="@+id/stride_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total_distance:"/>

                <TextView
                    android:id="@+id/total_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#654783"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSC Feature Data"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_read_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="read"
                    android:textSize="12sp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stride length mea supp:"/>

                <TextView
                    android:id="@+id/stride_length_supported"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total distance mea supp:"/>

                <TextView
                    android:id="@+id/total_distance_supported"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="walking or running status:"/>

                <TextView
                    android:id="@+id/walking_or_running_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calibration supp:"/>

                <TextView
                    android:id="@+id/calibration_supported"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="multiple sensor supp:"/>

                <TextView
                    android:id="@+id/multi_sensor_supported"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#654783"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSC Sensor Location Data"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btn_read_sensor_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="read"
                    android:textSize="12sp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sensor location:"/>

                <TextView
                    android:id="@+id/sensor_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SC Control Point"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/control_point_op_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="state: unknown"
                    android:textSize="10sp"/>
                <ProgressBar
                    android:id="@+id/progressbar_control_point"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/cumulative_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Cumulative value: "
                        android:inputType="number"
                        android:textSize="8sp"/>

                    <Button
                        android:id="@+id/btn_set_cumulative_value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Set Cumulative Value"
                        android:textSize="8sp"/>


                </TableRow>


                <Button
                    android:id="@+id/btn_start_sensor_calibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Sensor Calibration"
                    android:textSize="8sp"/>


                <Spinner
                    android:id="@+id/spinner_sensor_location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />


                <Button
                    android:id="@+id/btn_request_supported_sensor_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request supported Sensor Location"
                    android:textSize="10sp"/>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
