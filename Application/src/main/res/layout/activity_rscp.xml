<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.bluetoothlegatt.RSCPActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connect State:"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/connected_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unknown"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RSC Measurement Data"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/enable_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="on/off"
                            android:textSize="10sp"
                            android:visibility="invisible" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="motion:" />

                        <TextView
                            android:id="@+id/motion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="speed:" />

                        <TextView
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cadence:" />

                        <TextView
                            android:id="@+id/cadence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="stride_length:" />

                        <TextView
                            android:id="@+id/stride_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="total_distance:" />

                        <TextView
                            android:id="@+id/total_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#654783" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RSC Feature Data"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btn_read_feature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="read"
                            android:layout_alignParentRight="true"
                            android:textSize="12sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="stride length mea supp:" />

                        <TextView
                            android:id="@+id/stride_length_supported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="total distance mea supp:" />

                        <TextView
                            android:id="@+id/total_distance_supported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="walking or running status:" />

                        <TextView
                            android:id="@+id/walking_or_running_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="calibration supp:" />

                        <TextView
                            android:id="@+id/calibration_supported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="multiple sensor supp:" />

                        <TextView
                            android:id="@+id/multi_sensor_supported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#654783" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RSC Sensor Location Data"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_read_sensor_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="read"
                            android:layout_alignParentRight="true"
                            android:textSize="12sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sensor location:" />

                        <TextView
                            android:id="@+id/sensor_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SC Control Point"
                            android:textSize="20sp" />




                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#20000000"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/cumulative_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:hint="Cumulative value: "

                                android:inputType="number"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btn_set_cumulative_value"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Set Cumulative Value"
                                android:textSize="8sp"
                                android:layout_alignParentRight="true"/>


                        </RelativeLayout>


                        <Button
                            android:id="@+id/btn_start_sensor_calibration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Sensor Calibration"
                            android:textSize="8sp" />


                        <Spinner
                            android:id="@+id/spinner_sensor_location"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />


                        <Button
                            android:id="@+id/btn_request_supported_sensor_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Request supported Sensor Location"
                            android:textSize="10sp" />

                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:background="#55345678">

            <ProgressBar
                android:id="@+id/progressbar_for_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@android:style/Widget.DeviceDefault.ProgressBar.Large"/>
            <TextView
                android:id="@+id/action_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
